<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="3dp"
    android:background="@color/colorAccent"
    android:backgroundTintMode="multiply"
    card_view:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="1px"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/tvListingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvListingLocation"
            android:layout_alignStart="@+id/tvListingLocation"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-light"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvListingRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvListingName"
            android:layout_alignStart="@+id/tvListingName"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Rating"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivListingProfileImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            card_view:srcCompat="@drawable/ic_baseline_person_pin_24" />

        <TextView
            android:id="@+id/tvListingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="sans-serif-light"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvListingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvListingTitle"
            android:layout_alignStart="@+id/tvListingTitle"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Location"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvListingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/ivListingProfileImg"
            android:fontFamily="sans-serif-light"
            android:text="Local adventure in"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:visibility="visible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>