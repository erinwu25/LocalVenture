<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditListingActivity">

    <TextView
        android:id="@+id/tvEditListingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="56dp"
        android:layout_toEndOf="@+id/ivEditListingImg"
        android:text="name"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toEndOf="@+id/ivEditListingImg"
        tools:layout_editor_absoluteY="43dp" />

    <ImageView
        android:id="@+id/ivEditListingImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_pin_24" />

    <TextView
        android:id="@+id/tvEditListingBlurbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditTitle"
        android:layout_alignStart="@+id/ivEditListingImg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:text="Blurb"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/etEditListingBlurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEditListingBlurbTitle"
        android:layout_alignStart="@+id/tvEditListingBlurbTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="start|top"
        android:hint="Enter a short description of the adventures you offer!"
        android:inputType="textMultiLine"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvEditListingAvailabilityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditListingBlurb"
        android:layout_alignStart="@+id/etEditListingBlurb"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Availability"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnEditListingSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="sans-serif-light"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnEditStart"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tvEditListingAvailabilityTitle"
        android:layout_alignStart="@+id/tvEditListingAvailabilityTitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="sans-serif-light"
        android:text=" Select Start Date "
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnEditEnd"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tvEditListingAvailabilityTitle"
        android:layout_alignEnd="@+id/etEditListingBlurb"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="sans-serif-light"
        android:text=" Select End Date "
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvEditStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEditStart"
        android:layout_alignEnd="@+id/btnEditStart"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:text="Start"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvEditEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEditEnd"
        android:layout_alignStart="@+id/btnEditEnd"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="End"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEditStart"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/tvEditEnd"
        android:layout_toEndOf="@+id/tvEditStart"
        android:gravity="center"
        android:text="-"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/etEditTitle"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-10dp"
        android:layout_toEndOf="@+id/textView6"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Listing Title"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivEditListingImg"
        android:layout_alignStart="@+id/ivEditListingImg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:text="Listing Title: "
        android:textColor="@color/colorPrimaryDark" />

    <me.abhinay.input.CurrencyEditText
        android:id="@+id/etEditPrice"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="-10dp"
        android:layout_toEndOf="@+id/textView7"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="sans-serif-light"
        android:gravity="clip_vertical"
        android:hint=" Enter a price for your tour "
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEditStart"
        android:layout_alignStart="@+id/ivEditListingImg"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Price: "
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
