<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ivDetailsProfileImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListingDetails">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@android:drawable/ic_menu_compass" />

    <TextView
        android:id="@+id/tvDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDetailsRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsName"
        android:layout_alignStart="@+id/tvDetailsName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Rating"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvDetailsBlurbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsBio"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Description"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvDetailsBlurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsBlurbTitle"
        android:layout_alignStart="@+id/tvDetailsBlurbTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="Blurb" />

    <TextView
        android:id="@+id/tvDetailsAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsRating"
        android:layout_alignStart="@+id/tvDetailsRating"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Availability"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvDetailsLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsAvailability"
        android:layout_alignStart="@+id/tvDetailsAvailability"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Location"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvDetailsBioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsLocation"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="About this guide"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvDetailsBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsBioTitle"
        android:layout_alignStart="@+id/tvDetailsBioTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="Bio" />

    <TextView
        android:id="@+id/tvDetailsContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsBlurb"
        android:layout_alignStart="@+id/tvDetailsBlurb"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Contact"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnDetailsViewReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailsContact"
        android:layout_alignStart="@+id/tvDetailsContact"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:text="View Reviews" />

    <Button
        android:id="@+id/btnDetailsEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:text="Edit Listing" />

    <Button
        android:id="@+id/btnAddReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDetailsViewReviews"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="40dp"
        android:text="Add Review" />

    <TextView
        android:id="@+id/tvDetailsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDetailsName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="40dp"
        android:text="Date"
        android:textColor="#000000" />
</RelativeLayout>